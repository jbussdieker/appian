<h1>Deployments</h1>

<p id="notice"><%= notice %></p>

<p>
  <%= link_to 'New Deployment', new_deployment_path, class: 'btn btn-default' %>
</p>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Project</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @deployments.each do |deployment| %>
      <tr>
        <td><%= deployment.name %></td>
        <td><%= deployment.project_id %></td>
        <td><%= deployment_status(deployment.status) %></td>
        <td><%= link_to 'Show', deployment %></td>
        <td><%= link_to 'Edit', edit_deployment_path(deployment) %></td>
        <td><%= link_to 'Destroy', deployment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
